<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Player Dashboard</title>
  <style>
   
    body {
      font-family: 'Poppins', sans-serif;
      background-color: #f0f4f8;
      margin: 0;
      padding: 0;
      color: #333;
      line-height: 1.6;
    }
  
    h1 {
      text-align: center;
      font-size: 2.8rem;
      margin: 20px 0;
      color: #2c3e50;
    }
  
    section {
      max-width: 1100px;
      margin: 20px auto;
      padding: 20px;
      background: #ffffff;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      gap: 30px;
    }
  
    section h2 {
      font-size: 1.8rem;
      color: #34495e;
      margin-bottom: 15px;
      border-bottom: 3px solid #3498db;
      padding-bottom: 10px;
    }
  
   
    .create-session-btn {
      display: inline-block;
      padding: 15px 30px;
      font-size: 1.2rem;
      font-weight: 600;
      color: #ffffff;
      background-color: #28a745;
      border: none;
      border-radius: 8px;
      text-align: center;
      text-decoration: none;
      transition: all 0.3s ease;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
  
    .create-session-btn:hover {
      background-color: #218838;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.2);
      transform: translateY(-2px);
    }
  
    
    .session-card {
      padding: 20px;
      border: 1px solid #e1e5eb;
      border-radius: 10px;
      background-color: #f9fbfd;
      display: flex;
      flex-direction: column;
      gap: 10px;
      transition: box-shadow 0.3s ease, transform 0.3s ease;
    }
  
    .session-card:hover {
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
      transform: translateY(-3px);
    }
  
    .session-card h3 {
      font-size: 1.6rem;
      margin: 0;
      color: #2c3e50;
    }
  
    .session-card p {
      font-size: 1rem;
      margin: 0;
      color: #555;
    }
  
   
    .action-btn {
      padding: 10px 20px;
      font-size: 1rem;
      font-weight: 500;
      color: #ffffff;
      background-color: #3498db;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.3s ease, transform 0.2s ease;
    }
  
    .action-btn:hover {
      background-color: #2980b9;
      transform: scale(1.05);
    }
  
    .action-btn.cancel {
      background-color: #e74c3c;
    }
  
    .action-btn.cancel:hover {
      background-color: #c0392b;
    }
  
  
    textarea {
      width: 100%;
      padding: 15px;
      border: 1px solid #dcdfe6;
      border-radius: 8px;
      resize: none;
      font-size: 1rem;
      font-family: 'Poppins', sans-serif;
    }
  
    textarea:focus {
      outline: none;
      border-color: #3498db;
      box-shadow: 0 0 6px rgba(52, 152, 219, 0.3);
    }
  
    
    .session-container {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
    }
  
    
    footer {
      margin-top: 20px;
      text-align: center;
      font-size: 0.9rem;
      color: #888;
    }
  
    footer a {
      color: #3498db;
      text-decoration: none;
    }
  
    footer a:hover {
      text-decoration: underline;
    }
  
  
    @media (max-width: 768px) {
      h1 {
        font-size: 2.2rem;
      }
  
      .create-session-btn {
        width: 100%;
      }
  
      section {
        padding: 15px;
      }
  
      .session-container {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <h1>welcome to Dashboard</h1>

  
  <section>
    <h2>Sessions Created by Others</h2>
    <div class="session-container">
      <% otherSessions.forEach(session => { %>
        <div class="session-card">
          <h3><%= session.sport.name %> - <%= session.location %></h3>
          <p>Start Time: <%= session.startTime %></p>
          <p>Available Spots: <%= session.availableSpots %></p>
          <% if (session.availableSpots > 0) { %>
            <form action="/player/join-session/<%= session.id %>" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button type="submit" class="action-btn">Join Session</button>
            </form>
          <% } else { %>
            <p>Session is full</p>
          <% } %>
        </div>
      <% }) %>
    </div>
  </section>

 
  <section>
    <h2>Your Created Sessions</h2>
    <div class="session-container">
      <% createdSessions.forEach(session => { %>
        <div class="session-card">
          <h3><%= session.sport.name %> - <%= session.location %></h3>
          <p>Available Spots: <%= session.availableSpots %></p>
          <form action="/player/delete-session/<%= session.id %>" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="action-btn cancel">Delete Session</button>
          </form>
        </div>
      <% }) %>
    </div>
    <a href="/player/create-session" class="create-session-btn">Create New Session</a>
  </section>

 
  <section>
    <h2>Your Joined Sessions</h2>
    <div class="session-container">
      <% joinedSessions.forEach(joined => { %>
        <div class="session-card">
          <h3><%= joined.session.sport.name %> - <%= joined.session.location %></h3>
          <form action="/player/cancel-session/<%= joined.session.id %>" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <textarea name="reason" placeholder="Reason for canceling" required></textarea>
            <button type="submit" class="action-btn cancel">Cancel Session</button>
          </form>
        </div>
      <% }) %>
    </div>
  </section>

  <footer>
    <p>&copy; 2025 Player Dashboard | <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a></p>
  </footer>
</body>
</html>
