<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1>Player Dashboard</h1>
<h3>Created Sessions</h3>
<ul>
  <% createdSessions.forEach(session => { %>
    <li><%= session.location %> - <%= session.startTime %></li>
  <% }) %>
</ul>
<!-- playerdashboard.ejs -->
<h1>Your Created Sessions</h1>

<% createdSessions.forEach(session => { %>
  <div>
    <h3><%= session.sport ? session.sport.name : 'Sport not found' %></h3>
    <p>Location: <%= session.location %></p>
    <p>Start Time: <%= session.startTime %></p>
    <p>End Time: <%= session.endTime %></p>
    <p>Available Spots: <%= session.availableSpots %></p>
    
    <% if (session.availableSpots > 0) { %>
      <form action="/player/join-session/<%= session.id %>" method="POST">
        <button type="submit">Join</button>
      </form>
    <% } else { %>
      <p>No spots available</p>
    <% } %>
  </div>
<% }) %>

 


<h3>Joined Sessions</h3>
<ul>
  <% joinedSessions.forEach(joined => { %>
    <li><%= joined.session.location %> - <%= joined.session.startTime %></li>
  <% }) %>
</ul>

<a href="/player/create-session">Create Session</a>

</body>
</html>